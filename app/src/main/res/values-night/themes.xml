<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#053F77</item>
        <!-- Action bar color. -->
        <item name="colorPrimary">#0566A3</item>
        <item name="colorPrimaryVariant">#053F77</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- App background color. -->

        <item name="android:windowBackground">#000000</item>

        <item name="actionBarStyle">@style/Widget.MaterialComponents.ActionBar.Primary</item>
    </style>


    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="android:theme">@style/MyCardViewStyleOverlay</item>
    </style>

    <style name="MyCardViewStyleOverlay">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="MyCardViewStyleOverlay.Dark">
        <item name="cardBackgroundColor">@color/black</item>
    </style>




</resources>
